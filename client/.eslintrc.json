{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": ["plugin:react/recommended", "standard"],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": ["react"],
    "rules": {
        "no-tabs": "off",
        "react/react-in-jsx-scope": 0,
        "no-undef": "off",
        "react/no-unescaped-entities": "off",
        "react/jsx-key": 0
    }
}
